<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CPCPA</title>

    <!-- Bootstrap & Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/darkmode.css" asp-append-version="true" />


</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebarMenu">
        <div class="text-center my-3">
            <img src="~/css/CPCPA.svg" alt="Logo" class="sidebar-logo" />
        </div>

        <ul class="nav flex-column">
            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i><span> Home</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="usersDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-people"></i> Users
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="usersDropdown">
                        <li>
                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                <i class="bi bi-people"></i> Manage Users
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Admin" asp-action="PendingApprovals">
                                <i class="bi bi-person-check"></i> Pending Approvals
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="departmentsDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-building"></i> Departments
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="departmentsDropdown">
                        <li>
                            <a class="dropdown-item" asp-controller="Finance" asp-action="Index">
                                <i class="bi bi-cash-coin"></i> Finance
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="PlanningOfficer" asp-action="Index">
                                <i class="bi bi-clipboard-check"></i> Planning Officer
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="CustomerCare" asp-action="Index">
                                <i class="bi bi-person-badge"></i> Customer Care
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="DocumentOfficer" asp-action="Index">
                                <i class="bi bi-folder-check"></i> Document Officer
                            </a>
                        </li>
                    </ul>
                </li>
            }
            else if (User.Identity?.IsAuthenticated == true && User.IsInRole("Finance"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Finance" asp-action="Index">
                        <i class="bi bi-house-door"></i><span> Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Expense" asp-action="Index">
                        <i class="bi bi-cash-stack"></i><span> Expense Tracking</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Analytics" asp-action="Index">
                        <i class="bi bi-bar-chart"></i><span> Analytics</span>
                    </a>
                </li>

            }
            else if (User.Identity?.IsAuthenticated == true && User.IsInRole("DocumentOfficer"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="DocumentOfficer" asp-action="Index">
                        <i class="bi bi-house-door"></i><span> Home</span>
                    </a>
                </li>

            }
            else if (User.Identity?.IsAuthenticated == true && User.IsInRole("PlanningOfficer"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="PlanningOfficer" asp-action="Index">
                        <i class="bi bi-house-door"></i><span> Home</span>
                    </a>
                </li>

            }
            else if (User.Identity?.IsAuthenticated == true && User.IsInRole("CustomerCare"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="CustomerCare" asp-action="Index">
                        <i class="bi bi-house-door"></i><span> Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="CustomerCare" asp-action="TrackingNumbers">
                        <i class="bi bi-hash"></i><span> Tracking Numbers</span>
                    </a>
                </li>

            }
        </ul>


    </nav>

    <!-- Topbar -->
    <div class="topbar bg-light d-flex justify-content-end align-items-center px-3" style="height:60px;">
        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark"
           id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle fs-4 me-2"></i> @User.Identity?.Name
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            @if (User.IsInRole("Admin"))
            {
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Clients"><i class="bi bi-people-fill"></i> Client Monitoring</a></li>
                <li><a class="dropdown-item" asp-controller="CustomerCare" asp-action="TrackingNumbers"><i class="bi bi-hash"></i> Tracking Numbers</a></li>
                <li><a class="dropdown-item" asp-controller="Expense" asp-action="Index"><i class="bi bi-cash-stack"></i> Expenses</a></li>
                <li><a class="dropdown-item" asp-controller="Analytics" asp-action="Index"><i class="bi bi-bar-chart"></i> Analytics</a></li>
                <li><a class="dropdown-item" asp-controller="Backup" asp-action="Index"><i class="bi bi-shield-check"></i> Backup Management</a></li>
                <li><hr class="dropdown-divider"></li>
            }


            <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings"><i class="bi bi-gear"></i> Settings</a></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                </form>
            </li>
        </ul>
    </div>

    <!-- Main Content Wrapper -->
    <div class="main-wrapper flex-grow-1 d-flex flex-column">
        <!-- Main Content -->
        <main class="content flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer border-top text-muted bg-light text-center py-3 mt-auto">
        &copy; 2025 - CPCPA
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        // Only enable real-time update logic if not on the login page
        if (window.location.pathname.toLowerCase() !== "/account/login") {
            connection.on("ReceiveUpdate", function (message) {
                // Show notification banner if it exists, otherwise reload
                var banner = document.getElementById("realtime-notification");
                if (banner) {
                    banner.style.display = "block";
                } else {
                    location.reload();
                }
            });
        }

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
