@model TestingDemo.Models.ClientModel

<div class="modal fade" id="backToFinanceModal-@Model.Id" tabindex="-1" aria-labelledby="backToFinanceModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="BackToFinance" asp-route-id="@Model.Id" method="post">
                <div class="modal-header bg-warning text-dark border-0 py-3">
                    <h5 class="modal-title fw-bold mb-0" id="backToFinanceModalLabel-@Model.Id">
                        <i class="bi bi-arrow-left-circle me-2"></i>Return Client to Finance
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="text-center mb-4">
                        <div class="bg-warning bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-arrow-left-circle text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <h6 class="text-warning fw-bold mb-2">Return Client to Finance</h6>
                        <p class="text-muted mb-0">Please provide a detailed reason for returning this client to the Finance department.</p>
                    </div>
                    
                    <div class="mb-4">
                        <label for="note-@Model.Id" class="form-label fw-medium">
                            <i class="bi bi-chat-left-text me-2 text-warning"></i>Reason for Return <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control rounded-3" id="note-@Model.Id" name="note" rows="4" 
                                  placeholder="Please provide a detailed reason for returning this client to Finance..." required></textarea>
                        <div class="form-text text-muted mt-2">
                            <i class="bi bi-info-circle me-1"></i>This note will help Finance understand what needs to be corrected.
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 py-3">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4 py-2" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-warning rounded-pill px-4 py-2 shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>Return to Finance
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


