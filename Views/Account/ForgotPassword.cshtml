@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_SpecifiedNav.cshtml";
}
<div class="login-container">
<h2>Forgot Password?</h2>
<form method="post">
    <label for="email" class="fixed-align">Enter your email.</label>
    <input type="email" id="email" name="email" required class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Send OTP</button>    
</form>
</div>

<style>
    .fixed-align{
        display: flex;
        margin: 7px auto;
    }
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        text-align: center;
    }
    /* Dark mode overrides */
    body.dark-mode .login-container {
        background: #23272b !important;
        color: #e8e6e3 !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

        body.dark-mode .login-container h2 {
            color: #e8e6e3 !important;
        }

    body.dark-mode .login-form input,
    body.dark-mode .login-form label {
        background: #23272b !important;
        color: #e8e6e3 !important;
        border-color: #444 !important;
    }

        body.dark-mode .login-form input:focus {
            border-color: #4A90E2 !important;
            box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.2);
        }

    body.dark-mode .btn-login {
        background: #375a7f !important;
        color: #fff !important;
        border: none;
    }

        body.dark-mode .btn-login:hover {
            background: #274060 !important;
        }

    body.dark-mode .btn-link,
    body.dark-mode .btn-outline-primary {
        background: #23272b !important;
        color: #e8e6e3 !important;
        border-color: #444 !important;
    }

        body.dark-mode .btn-outline-primary:hover {
            background: #375a7f !important;
            color: #fff !important;
        }

    body.dark-mode .error-message {
        color: #ff6b6b !important;
    }
</style>