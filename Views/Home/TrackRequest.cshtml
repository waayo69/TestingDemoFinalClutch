@{
    ViewData["Title"] = "Track Your Request";
    Layout = "~/Views/Shared/_SpecifiedNav.cshtml";
}
<div class="container py-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center"><i class="bi bi-search"></i> Track Your Request</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <form method="post" class="card p-3 shadow-sm">
        <label for="trackingNumber" class="form-label">Tracking Number</label>
        <input type="text" class="form-control mb-3" id="trackingNumber" name="trackingNumber" placeholder="AWYZ-078923"
            maxlength="11" pattern="[A-Z]{4}-\d{6}" required autofocus autocomplete="off">
        <button type="submit" class="btn btn-primary w-100">Track</button>
        <div class="form-text mt-2">Format: <b>AWYZ-078923</b> (4 letters, dash, 6 numbers)</div>
    </form>
</div>