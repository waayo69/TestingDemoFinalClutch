@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Tab Persistence & Activation
            const activeTabId = localStorage.getItem('activeFinanceTab');
            const urlParams = new URLSearchParams(window.location.search);
            
            let tabToActivate = null;
            
            if (urlParams.has('pendingPageNumber')) {
                tabToActivate = document.querySelector('#pending-tab');
            } else if (urlParams.has('clearancePageNumber')) {
                tabToActivate = document.querySelector('#clearance-tab');
            } else if (urlParams.has('planningPageNumber')) {
                tabToActivate = document.querySelector('#planning-tab');
            } else if (activeTabId) {
                tabToActivate = document.querySelector('#' + activeTabId);
            }
            
            if (tabToActivate) {
                bootstrap.Tab.getOrCreateInstance(tabToActivate).show();
            }
            
            // Log tab changes to storage
            document.querySelectorAll('button[data-bs-toggle="tab"]').forEach(el => {
                el.addEventListener('shown.bs.tab', event => {
                    localStorage.setItem('activeFinanceTab', event.target.id);
                });
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Generic Modal Setup Function
            function setupModal(modalId, placeholderSelector, actionUrlBase) {
                var modal = document.getElementById(modalId);
                if (modal) {
                    modal.addEventListener('show.bs.modal', function (event) {
                        var button = event.relatedTarget;
                        var clientId = button.getAttribute('data-client-id');
                        var clientName = button.getAttribute('data-client-name');
                        
                        if (clientId && clientName) {
                            var text = modal.querySelector(placeholderSelector);
                            if (text) text.textContent = clientName;
                            
                            var form = modal.querySelector('form');
                            if (form) form.action = actionUrlBase + clientId;
                        }
                    });
                }
            }

            // Special setup for Send to Planning Modal with Planning Officer dropdown
            var sendToPlanningModal = document.getElementById('sendToPlanningModal');
            if (sendToPlanningModal) {
                // Load Planning Officers when modal is shown
                sendToPlanningModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var clientId = button.getAttribute('data-client-id');
                    var clientName = button.getAttribute('data-client-name');
                    
                    if (clientId && clientName) {
                        var text = sendToPlanningModal.querySelector('#clientNamePlaceholder');
                        if (text) text.textContent = clientName;
                        
                        var form = sendToPlanningModal.querySelector('form');
                        if (form) form.action = '/Finance/SendToPlanningOfficer/' + clientId;
                        
                        // Load Planning Officers
                        var dropdown = document.getElementById('assignedPlanningOfficer');
                        if (dropdown) {
                            dropdown.innerHTML = '<option value="">Loading...</option>';
                            
                            fetch('/Finance/GetPlanningOfficers')
                                .then(response => response.json())
                                .then(officers => {
                                    dropdown.innerHTML = '<option value="">-- None (Unassigned) --</option>';
                                    officers.forEach(officer => {
                                        var option = document.createElement('option');
                                        option.value = officer.id;
                                        option.textContent = officer.fullName + ' (' + officer.email + ')';
                                        dropdown.appendChild(option);
                                    });
                                })
                                .catch(error => {
                                    console.error('Error loading Planning Officers:', error);
                                    dropdown.innerHTML = '<option value="">-- Error Loading Officers --</option>';
                                });
                        }
                    }
                });
                
                // Handle form submission to include assigned officer
                var planningForm = sendToPlanningModal.querySelector('form');
                if (planningForm) {
                    planningForm.addEventListener('submit', function(e) {
                        var dropdown = document.getElementById('assignedPlanningOfficer');
                        if (dropdown && dropdown.value) {
                            // Add hidden input for assigned user ID
                            var hiddenInput = document.createElement('input');
                            hiddenInput.type = 'hidden';
                            hiddenInput.name = 'assignedUserId';
                            hiddenInput.value = dropdown.value;
                            planningForm.appendChild(hiddenInput);
                        }
                    });
                }
            }

            setupModal('archiveModal', '#archiveClientName', '/Finance/ArchiveClient/');
            setupModal('deleteModal', '#deleteClientName', '/Finance/Delete/');

            // Mark as Done Modal
            var markAsDoneModal = document.getElementById('markAsDoneModal');
            if (markAsDoneModal) {
                markAsDoneModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var clientId = button.getAttribute('data-client-id');
                    var clientName = button.getAttribute('data-client-name');

                    document.getElementById('markAsDoneClientName').textContent = clientName;
                    document.getElementById('markAsDoneForm').action = '/Finance/MarkAsDone/' + clientId;
                });
            }

            // Auto-dismiss alerts
            setTimeout(() => {
                document.querySelectorAll('.alert-dismissible').forEach(alert => {
                    bootstrap.Alert.getOrCreateInstance(alert).close();
                });
            }, 5000);
        });

        // Hub & Sound Logic
        let pendingClientIds = Array.from(document.querySelectorAll('#pending-pane tbody tr [data-client-id]')).map(el => el.getAttribute('data-client-id'));
        let clearanceClientIds = Array.from(document.querySelectorAll('#clearance-pane tbody tr [data-client-id]')).map(el => el.getAttribute('data-client-id'));
        
        function playNotifySound() {
            var audio = document.getElementById('notifySound');
            if (audio) { audio.currentTime = 0; audio.play().catch(e => console.log("Sound play failed", e)); }
        }

        function renderFinance(data) {
            let newPendingIds = (data.PendingClients.items || []).map(c => c.id?.toString());
            let isNewPending = newPendingIds.some(id => !pendingClientIds.includes(id));
            let newClearanceIds = (data.ClearanceClients.items || []).map(c => c.id?.toString());
            let isNewClearance = newClearanceIds.some(id => !clearanceClientIds.includes(id));
            if (isNewPending || isNewClearance) { playNotifySound(); }
            location.reload();
        }

        if (window.connection) {
            connection.on("ReceiveUpdate", function (message) {
                fetch('/Finance/GetLatestData').then(res => res.json()).then(data => renderFinance(data));
            });
        }

        // Lazy load requirements section
        document.addEventListener('shown.bs.modal', function (event) {
            var modal = event.target;
            if (!modal?.id?.startsWith('clientModal-')) return;
            var clientId = modal.id.replace('clientModal-', '');
            
            // 1. Load Planning Officer format requirements checklist
            var target = modal.querySelector('#req-list-' + clientId);
            var section = modal.querySelector('#requirements-section-' + clientId);
            if (target) {
                fetch('/PlanningOfficer/Requirements/' + clientId + '?readOnly=true&t=' + Date.now(), {
                    cache: 'no-store', headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(res => res.ok ? res.text() : Promise.reject())
                .then(html => {
                    target.innerHTML = html;
                    var hasReq = target.querySelector('.requirement-item, .list-group-item, .form-check');
                    if (section) section.style.display = hasReq ? 'block' : 'none';
                })
                .catch(() => {
                    target.innerHTML = '<div class="alert alert-warning py-2 mb-0">Unabled to load requirements list.</div>';
                    if (section) section.style.display = 'none';
                });
            }

            // 2. Load Finance Requirement Files view (submitted files)
            var filesElement = modal.querySelector('#fin-requirement-files-' + clientId);
            if (filesElement && filesElement.innerHTML.includes('spinner-border')) {
                fetch('/Finance/GetRequirementFiles?clientId=' + clientId + '&t=' + Date.now(), {
                    cache: 'no-store',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(r => r.text())
                .then(html => { filesElement.innerHTML = html; })
                .catch(() => { filesElement.innerHTML = '<div class="alert alert-warning">Failed to load requirement files.</div>'; });
            }
        });

        // Global file viewer handlers (for Finance View requirement file)
        document.addEventListener('click', function (e) {
            if (e.target.closest('.view-fin-file-btn')) {
                const btn = e.target.closest('.view-fin-file-btn');
                const fileUrl = btn.getAttribute('data-file-url');
                const fileName = btn.getAttribute('data-file-name');
                const fileType = btn.getAttribute('data-file-type').toLowerCase();
                
                document.getElementById('viewerFileName').textContent = fileName;
                document.getElementById('downloadFileBtn').href = fileUrl;
                
                const contentDiv = document.getElementById('fileViewerContent');
                if (['.jpg', '.jpeg', '.png', '.gif', '.webp'].some(ext => fileType.includes(ext))) {
                    contentDiv.innerHTML = `<img src="${fileUrl}" class="img-fluid rounded shadow-sm" style="max-height: 70vh;" />`;
                } else if (fileType.includes('.pdf')) {
                    contentDiv.innerHTML = `<iframe src="${fileUrl}" style="width: 100%; height: 70vh; border: none;"></iframe>`;
                } else {
                    contentDiv.innerHTML = `<div class="text-center p-5"><i class="bi bi-file-earmark fs-1 text-muted mb-3"></i><h5>${fileName}</h5><p>Cannot preview this type.</p></div>`;
                }
                new bootstrap.Modal(document.getElementById('fileViewerModal')).show();
            }
        });
    </script>
}
