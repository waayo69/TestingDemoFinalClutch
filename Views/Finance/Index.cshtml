@model TestingDemo.ViewModels.FinanceDashboardViewModel
@{
    ViewData["Title"] = "Finance Dashboard";
    
    var hasReturnedClients = Model.PendingClients.Any(c => c.Status == "For Review");
    var pendingSectionTitle = hasReturnedClients ? "Review Items" : "New Applications";
    var pendingSectionIcon = hasReturnedClients ? "bi bi-eye" : "bi bi-file-earmark-text";
}


<div class="container-fluid py-4">
    <!-- Header -->
    <div class="dashboard-header mb-4 p-4 rounded-4 shadow-sm bg-white border-0">
        <div class="row align-items-center g-3">
            <div class="col-12 col-lg-6">
                <div class="d-flex align-items-center">
                    <div class="header-icon-box bg-primary bg-opacity-10 text-primary p-3 rounded-3 me-3">
                        <i class="bi bi-wallet2 fs-3"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-0 text-dark">@ViewData["Title"]</h2>
                        <p class="text-muted mb-0">Track client applications and financial clearances</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="d-flex flex-wrap justify-content-lg-end align-items-center gap-2">
                    <form asp-action="Index" method="get" class="search-group">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 border-0 shadow-sm ps-3">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                                   class="form-control border-start-0 border-0 shadow-sm ps-2 py-2 rounded-end" 
                                   placeholder="Search tracking #, name..." style="width: 250px;" />
                            @if (!String.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                            {
                                <a asp-action="Index" class="btn btn-light border-0 shadow-sm ms-2 rounded-circle" title="Clear search">
                                    <i class="bi bi-x-lg"></i>
                                </a>
                            }
                        </div>
                    </form>

                    <div class="dropdown">
                        <button class="btn btn-white shadow-sm border-0 px-3 py-2 dropdown-toggle d-flex align-items-center gap-2 rounded-3" 
                                type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-sort-down text-primary"></i>
                            <span class="fw-semibold">Sort</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2 p-2 rounded-3">
                            <li><a class="dropdown-item rounded-2" asp-action="Index" asp-route-sortOrder="" asp-route-searchString="@ViewData["CurrentFilter"]">Default</a></li>
                            <li><a class="dropdown-item rounded-2" asp-action="Index" asp-route-sortOrder="name_desc" asp-route-searchString="@ViewData["CurrentFilter"]">Name (Z-A)</a></li>
                            <li><a class="dropdown-item rounded-2" asp-action="Index" asp-route-sortOrder="Date" asp-route-searchString="@ViewData["CurrentFilter"]">Date (Oldest)</a></li>
                            <li><a class="dropdown-item rounded-2" asp-action="Index" asp-route-sortOrder="date_desc" asp-route-searchString="@ViewData["CurrentFilter"]">Date (Newest)</a></li>
                        </ul>
                    </div>

                    <a asp-action="Create" class="btn btn-primary shadow-sm px-4 py-2 rounded-3 fw-bold">
                        <i class="bi bi-plus-lg me-1"></i> New
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null || TempData["ErrorMessage"] != null)
    {
        <div class="alert @(TempData["SuccessMessage"] != null ? "alert-success border-success" : "alert-danger border-danger") alert-dismissible fade show mb-4 shadow-sm border-0 border-start border-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi @(TempData["SuccessMessage"] != null ? "bi-check-circle-fill text-success" : "bi-exclamation-triangle-fill text-danger") fs-4 me-3"></i>
                <div>
                    <strong class="d-block mb-1">@(TempData["SuccessMessage"] != null ? "Success!" : "Action Required")</strong>
                    <span>@(TempData["SuccessMessage"] ?? TempData["ErrorMessage"])</span>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tabbed Navigation -->
    <div class="dashboard-card border-0 shadow-sm rounded-4 bg-white overflow-hidden mb-5">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4">
            <ul class="nav nav-pills custom-tabs mb-0" id="financeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active fw-bold px-4 py-3" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-pane" type="button" role="tab">
                        <i class="@pendingSectionIcon me-2"></i> @pendingSectionTitle
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary ms-2">@Model.PendingClients.TotalCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bold px-4 py-3" id="clearance-tab" data-bs-toggle="tab" data-bs-target="#clearance-pane" type="button" role="tab">
                        <i class="bi bi-cash-coin me-2"></i> Clearance Queue
                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning ms-2">@Model.ClearanceClients.TotalCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bold px-4 py-3" id="planning-tab" data-bs-toggle="tab" data-bs-target="#planning-pane" type="button" role="tab">
                        <i class="bi bi-card-checklist me-2"></i> Project List
                        <span class="badge rounded-pill bg-info bg-opacity-10 text-info ms-2">@Model.PlanningClients.TotalCount</span>
                    </button>
                </li>
            </ul>
        </div>
        
        <div class="tab-content" id="financeTabsContent">
            <!-- New Applications Pane -->
            <div class="tab-pane fade show active" id="pending-pane" role="tabpanel" aria-labelledby="pending-tab">
                <div class="p-0">
                    @if (Model.PendingClients.Any())
                    {
                        <div class="table-responsive">
                            @await Html.PartialAsync("_ClientTable", Model.PendingClients, new ViewDataDictionary(ViewData) { ["IsClearanceTable"] = false })
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-mailbox2 text-secondary"></i>
                            <h4 class="text-secondary fw-bold">Queue is empty</h4>
                            <p class="text-muted">New applications will appear here once they are submitted.</p>
                        </div>
                    }
                    
                    @if (Model.PendingClients.TotalPages > 1)
                    {
                        <div class="pagination-container">
                            @await Html.PartialAsync("_Pagination", null, new ViewDataDictionary(ViewData) {
                                ["pageModel"] = Model.PendingClients,
                                ["pageAction"] = "Index",
                                ["pageNumberParam"] = "pendingPageNumber",
                                ["otherPageNumberParam"] = "clearancePageNumber",
                                ["otherPageNumber"] = Model.ClearanceClients.PageIndex
                            })
                        </div>
                    }
                </div>
            </div>

            <!-- Finance Clearance Pane -->
            <div class="tab-pane fade" id="clearance-pane" role="tabpanel" aria-labelledby="clearance-tab">
                <div class="p-0">
                    @if (Model.ClearanceClients.Any())
                    {
                        <div class="table-responsive">
                            @await Html.PartialAsync("_ClientTable", Model.ClearanceClients, new ViewDataDictionary(ViewData) { ["IsClearanceTable"] = true })
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-shield-check text-success"></i>
                            <h4 class="text-success fw-bold">All caught up!</h4>
                            <p class="text-muted">No clients are currently awaiting financial clearance.</p>
                        </div>
                    }
                    
                    @if (Model.ClearanceClients.TotalPages > 1)
                    {
                        <div class="pagination-container">
                            @await Html.PartialAsync("_Pagination", null, new ViewDataDictionary(ViewData) {
                                ["pageModel"] = Model.ClearanceClients,
                                ["pageAction"] = "Index",
                                ["pageNumberParam"] = "clearancePageNumber",
                                ["otherPageNumberParam"] = "pendingPageNumber",
                                ["otherPageNumber"] = Model.PendingClients.PageIndex
                            })
                        </div>
                    }
                </div>
            </div>

            <!-- Client List Pane -->
            <div class="tab-pane fade" id="planning-pane" role="tabpanel" aria-labelledby="planning-tab">
                <div class="p-0">
                    @if (Model.PlanningClients.Any())
                    {
                        <div class="table-responsive">
                            @await Html.PartialAsync("_PlanningClientTable", Model.PlanningClients)
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-people text-info"></i>
                            <h4 class="text-info fw-bold">No active projects</h4>
                            <p class="text-muted">Projects will appear here once they move to the planning stage.</p>
                        </div>
                    }
                    
                    @if (Model.PlanningClients.TotalPages > 1)
                    {
                        <div class="pagination-container">
                            @await Html.PartialAsync("_Pagination", null, new ViewDataDictionary(ViewData) {
                                ["pageModel"] = Model.PlanningClients,
                                ["pageAction"] = "Index",
                                ["pageNumberParam"] = "planningPageNumber",
                                ["otherPageNumberParam"] = "pendingPageNumber",
                                ["otherPageNumber"] = Model.PendingClients.PageIndex
                            })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<div class="modal fade" id="sendToPlanningModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                    <i class="bi bi-send fs-1"></i>
                </div>
                <h4 class="modal-title fw-bold mb-2">Send to Planning</h4>
                <p class="text-muted mb-0 mx-3">Are you sure you want to move <strong id="clientNamePlaceholder" class="text-dark"></strong> to the Planning stage?</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Cancel</button>
                <form id="sendToPlanningForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary px-4 rounded-3 fw-bold">Confirm & Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="archiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                    <i class="bi bi-archive fs-1"></i>
                </div>
                <h4 class="modal-title fw-bold mb-2">Archive Client</h4>
                <p class="text-muted mb-0 mx-3">This will move <strong id="archiveClientName" class="text-dark"></strong> to the archive. Active progress will be suspended.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Cancel</button>
                <form id="archiveForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning px-4 rounded-3 fw-bold">Archive Now</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                    <i class="bi bi-trash fs-1"></i>
                </div>
                <h4 class="modal-title fw-bold mb-2 text-danger">Delete Permanent</h4>
                <p class="text-muted mb-0 mx-3">Warning: Deleting <strong id="deleteClientName" class="text-dark"></strong> status is permanent and cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light px-4 rounded-3" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger px-4 rounded-3 fw-bold">Delete Client</button>
                </form>
            </div>
        </div>
    </div>
</div>

<audio id="notifySound" src="/sounds/Notifications.wav" preload="auto"></audio>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Tab Persistence & Activation
            const activeTabId = localStorage.getItem('activeFinanceTab');
            const urlParams = new URLSearchParams(window.location.search);
            
            let tabToActivate = null;
            
            if (urlParams.has('pendingPageNumber')) {
                tabToActivate = document.querySelector('#pending-tab');
            } else if (urlParams.has('clearancePageNumber')) {
                tabToActivate = document.querySelector('#clearance-tab');
            } else if (urlParams.has('planningPageNumber')) {
                tabToActivate = document.querySelector('#planning-tab');
            } else if (activeTabId) {
                tabToActivate = document.querySelector('#' + activeTabId);
            }
            
            if (tabToActivate) {
                bootstrap.Tab.getOrCreateInstance(tabToActivate).show();
            }
            
            // Log tab changes to storage
            document.querySelectorAll('button[data-bs-toggle="tab"]').forEach(el => {
                el.addEventListener('shown.bs.tab', event => {
                    localStorage.setItem('activeFinanceTab', event.target.id);
                });
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Generic Modal Setup Function
            function setupModal(modalId, placeholderSelector, actionUrlBase) {
                var modal = document.getElementById(modalId);
                if (modal) {
                    modal.addEventListener('show.bs.modal', function (event) {
                        var button = event.relatedTarget;
                        var clientId = button.getAttribute('data-client-id');
                        var clientName = button.getAttribute('data-client-name');
                        
                        if (clientId && clientName) {
                            var text = modal.querySelector(placeholderSelector);
                            if (text) text.textContent = clientName;
                            
                            var form = modal.querySelector('form');
                            if (form) form.action = actionUrlBase + clientId;
                        }
                    });
                }
            }

            setupModal('sendToPlanningModal', '#clientNamePlaceholder', '/Finance/SendToPlanningOfficer/');
            setupModal('archiveModal', '#archiveClientName', '/Finance/ArchiveClient/');
            setupModal('deleteModal', '#deleteClientName', '/Finance/Delete/');

            // Auto-dismiss alerts
            setTimeout(() => {
                document.querySelectorAll('.alert-dismissible').forEach(alert => {
                    bootstrap.Alert.getOrCreateInstance(alert).close();
                });
            }, 5000);
        });

        // Hub & Sound Logic
        let pendingClientIds = Array.from(document.querySelectorAll('#pending-pane tbody tr [data-client-id]')).map(el => el.getAttribute('data-client-id'));
        let clearanceClientIds = Array.from(document.querySelectorAll('#clearance-pane tbody tr [data-client-id]')).map(el => el.getAttribute('data-client-id'));
        
        function playNotifySound() {
            var audio = document.getElementById('notifySound');
            if (audio) { audio.currentTime = 0; audio.play().catch(e => console.log("Sound play failed", e)); }
        }

        function renderFinance(data) {
            let newPendingIds = (data.PendingClients.items || []).map(c => c.id?.toString());
            let isNewPending = newPendingIds.some(id => !pendingClientIds.includes(id));
            let newClearanceIds = (data.ClearanceClients.items || []).map(c => c.id?.toString());
            let isNewClearance = newClearanceIds.some(id => !clearanceClientIds.includes(id));
            if (isNewPending || isNewClearance) { playNotifySound(); }
            location.reload();
        }

        if (window.connection) {
            connection.on("ReceiveUpdate", function (message) {
                fetch('/Finance/GetLatestData').then(res => res.json()).then(data => renderFinance(data));
            });
        }

        // Lazy load requirements section
        document.addEventListener('shown.bs.modal', function (event) {
            var modal = event.target;
            if (!modal?.id?.startsWith('clientModal-')) return;
            var clientId = modal.id.replace('clientModal-', '');
            var target = modal.querySelector('#req-list-' + clientId);
            var section = modal.querySelector('#requirements-section-' + clientId);
            if (!target) return;
            
            fetch('/PlanningOfficer/Requirements/' + clientId + '?readOnly=true&t=' + Date.now(), {
                cache: 'no-store', headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(res => res.ok ? res.text() : Promise.reject())
            .then(html => {
                target.innerHTML = html;
                var hasReq = target.querySelector('.requirement-item, .list-group-item, .form-check');
                if (section) section.style.display = hasReq ? 'block' : 'none';
            })
            .catch(() => {
                target.innerHTML = '<div class="alert alert-warning py-2 mb-0">Unabled to load requirements list.</div>';
                if (section) section.style.display = 'none';
            });
        });
    </script>
}
