@model TestingDemo.Models.ClientModel

@{
    ViewData["Title"] = "Add New Client";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Clients</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </nav>
            <h2 class="mb-3"><i class="bi bi-person-plus"></i> Add New Client</h2>
        </div>
    </div>

    <form asp-action="Create" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
        @if (ViewBag.PostedForm != null)
        {
            <div class="alert alert-info">
                <strong>Debug: Posted Form Data</strong>
                <ul>
                    @foreach (var kv in (System.Collections.Generic.IDictionary<string,
                                    Microsoft.Extensions.Primitives.StringValues>)ViewBag.PostedForm)
                    {
                        <li><strong>@kv.Key</strong>: @string.Join(", ", kv.Value.ToArray())</li>
                    }
                </ul>
            </div>
        }
        @if (ViewBag.DebugErrors != null && ((List<string>)ViewBag.DebugErrors).Count > 0)
        {
            <div class="alert alert-warning">
                <ul>
                    @foreach (var err in (List<string>)ViewBag.DebugErrors)
                    {
                        <li>@err</li>
                    }
                </ul>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="row g-4">
            <!-- Client Info Section -->
            <div class="col-12">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-person-badge"></i> Client Information
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label asp-for="ClientName" class="form-label fw-bold">Client Name <span
                                    class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="ClientName" class="form-control" placeholder="Enter client name"
                                    required />
                            </div>
                            <span asp-validation-for="ClientName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClientType" class="form-label fw-bold">Type of Client <span
                                    class="text-danger">*</span></label>
                            <select asp-for="ClientType" class="form-select" required>
                                <option value="">-- Select Type of Client --</option>
                                <option>New or Walk-in Client</option>
                                <option>Continuing or Returning Client</option>
                                <option>Retainer Client</option>
                            </select>
                            <span asp-validation-for="ClientType" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Contact Info Section -->
            <div class="col-12">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-secondary text-white">
                        <i class="bi bi-telephone"></i> Contact Information
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label asp-for="ContactPersonNumber" class="form-label fw-bold">Contact Number <span
                                    class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="ContactPersonNumber" class="form-control"
                                    placeholder="Enter contact number" required />
                            </div>
                            <span asp-validation-for="ContactPersonNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-bold">Email <span
                                    class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Enter email address"
                                    required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ContactPersonEmailAddress" class="form-label fw-bold">Contact Person
                                Email</label>
                            <input asp-for="ContactPersonEmailAddress" class="form-control"
                                placeholder="Enter contact person email address (optional)" />
                            <span asp-validation-for="ContactPersonEmailAddress" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Company Info Section -->
            <div class="col-12">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-building"></i> Company Information
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label asp-for="RegisteredCompanyName" class="form-label fw-bold">Registered Company
                                Name</label>
                            <input asp-for="RegisteredCompanyName" class="form-control"
                                placeholder="Enter registered company name (optional)" />
                            <span asp-validation-for="RegisteredCompanyName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RegisteredCompanyAddress" class="form-label fw-bold">Company Address <span
                                    class="text-danger">*</span></label>
                            <input asp-for="RegisteredCompanyAddress" class="form-control"
                                placeholder="Enter company address" required />
                            <span asp-validation-for="RegisteredCompanyAddress" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TaxId" class="form-label fw-bold">Tax ID</label>
                            <input asp-for="TaxId" class="form-control" placeholder="Enter tax ID/number (optional)" />
                            <span asp-validation-for="TaxId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Project Info Section -->
            <div class="col-12">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-success text-white">
                        <i class="bi bi-kanban"></i> Project Information
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label asp-for="TypeOfProject" class="form-label fw-bold">Project Type <span
                                    class="text-danger">*</span></label>
                            <select asp-for="TypeOfProject" class="form-select" id="typeOfProjectSelect" required>
                                <option value="">-- Select Project Type --</option>
                                <option>Retainership - BIR</option>
                                <option>Retainership - SPP</option>
                                <option>One Time Transaction</option>
                                <option>External Audit</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="TypeOfProject" class="text-danger small"></span>
                            <div id="otherTypeOfProjectDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" id="otherTypeOfProjectInput"
                                    name="OtherTypeOfProject" placeholder="Please specify project type" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UrgencyLevel" class="form-label fw-bold">Urgency Level <span
                                    class="text-danger">*</span></label>
                            <div class="btn-group w-100" role="group" aria-label="Urgency Level">
                                <input type="radio" class="btn-check" asp-for="UrgencyLevel" id="urgencyNormal"
                                    value="Normal" autocomplete="off" checked>
                                <label class="btn btn-outline-success" for="urgencyNormal"><i
                                        class="bi bi-thermometer-half"></i> Normal</label>
                                <input type="radio" class="btn-check" asp-for="UrgencyLevel" id="urgencySlightly"
                                    value="Slightly Urgent" autocomplete="off">
                                <label class="btn btn-outline-warning" for="urgencySlightly"><i
                                        class="bi bi-exclamation-triangle"></i> Slightly Urgent</label>
                                <input type="radio" class="btn-check" asp-for="UrgencyLevel" id="urgencyUrgent"
                                    value="Urgent" autocomplete="off">
                                <label class="btn btn-outline-danger" for="urgencyUrgent"><i
                                        class="bi bi-exclamation-octagon"></i> Urgent</label>
                            </div>
                            <span asp-validation-for="UrgencyLevel" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Additional Info Section -->
            <div class="col-12">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-light text-dark">
                        <i class="bi bi-info-circle"></i> Additional Information
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label asp-for="RequestingParty" class="form-label fw-bold">Requesting Party</label>
                            <select asp-for="RequestingParty" class="form-select" id="requestingPartySelect">
                                <option value="">-- Select Requesting Party --</option>
                                <option>Office of the President</option>
                                <option>Finance, Accounting and Customer Service Department</option>
                                <option>Sales and Operations Department</option>
                                <option>Special Operations Department</option>
                                <option>Operational Planning and Invoicing Department</option>
                                <option>Facebook Inquiry</option>
                                <option>Instagram Inquiry</option>
                                <option>X (formerly Twitter) Inquiry</option>
                                <option>LinkedIn Inquiry</option>
                                <option>Google SEO Inquiry</option>
                                <option>Tiktok Inquiry</option>
                                <option>Referral by</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="RequestingParty" class="text-danger small"></span>
                            <div id="otherRequestingPartyDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" id="otherRequestingPartyInput"
                                    name="OtherRequestingParty"
                                    placeholder="Please specify (e.g. name of referrer or other details)" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="RequestorName" class="form-label fw-bold">Requestor Name</label>
                            <input asp-for="RequestorName" class="form-control"
                                placeholder="Enter requestor name (optional)" />
                            <span asp-validation-for="RequestorName" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Retainership - BIR Section -->
            <div class="col-12" id="retainerBIRSection" style="display:none;">
                <div class="card shadow-sm mb-3 border-primary">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-file-earmark-text"></i> Retainership - BIR Details
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Type of Registrant</label>
                            <select class="form-select" name="RetainershipBIR.TypeOfRegistrant"
                                id="typeOfRegistrantSelect">
                                <option value="">-- Select Type of Registrant --</option>
                                <option>Individual - Sole proprietorship</option>
                                <option>Individual - Professional</option>
                                <option>Partnership</option>
                                <option>Corporation</option>
                                <option>Cooperative</option>
                                <option>Association</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">OCN Number Notes</label>
                            <input type="text" class="form-control" name="RetainershipBIR.OCNNotes"
                                placeholder="Enter OCN number notes" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date OCN Generated</label>
                            <input type="date" class="form-control" name="RetainershipBIR.DateOCNGenerated" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date of BIR Registration</label>
                            <input type="date" class="form-control" name="RetainershipBIR.DateBIRRegistration" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">BIR RDO No.</label>
                            <select class="form-select" name="RetainershipBIR.BIRRdoNo" id="birRdoNoSelect">
                                <option value="">-- Select BIR RDO No. --</option>
                                <option>BIR 080 - Mandaue City</option>
                                <option>BIR 081 - Cebu City North</option>
                                <option>BIR 082 - Cebu City South</option>
                                <option>BIR 083 - Talisay City</option>
                                <option>Other</option>
                            </select>
                            <div id="otherBirRdoNoDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" name="RetainershipBIR.OtherBirRdoNo"
                                    id="otherBirRdoNoInput" placeholder="Please specify BIR RDO No." />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Upload Scanned Copy of the Client's Certificate of
                                Registration (BIR Form No. 2303)</label>
                            <input type="file" class="form-control" name="RetainershipBIR.BIRCertificateUpload"
                                accept="application/pdf,image/*" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Status of Tax Filing</label>
                            <select class="form-select" name="RetainershipBIR.TaxFilingStatus"
                                id="taxFilingStatusSelect">
                                <option value="">-- Select Status of Tax Filing --</option>
                                <option>The business is newly registered. Thus, no tax filing done as of the moment.
                                </option>
                                <option>The owner does his tax filing on his own from the time it was registered.
                                </option>
                                <option>The owner hired a bookkeeper or an accounting firm to do the tax filing.
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Does the client need Catch-Up Accounting?</label>
                            <div class="form-text mb-1">Catch Up Accounting is a process of updating or adjusting
                                financial records of a company. It involves going back and correcting the errors or
                                omissions in the financial statements, so that they accurately reflect the financial
                                position of the business.</div>
                            <select class="form-select" name="RetainershipBIR.NeedCatchUpAccounting"
                                id="needCatchUpAccountingSelect">
                                <option value="">-- Select Option --</option>
                                <option>No, the business is newly registered and there has no missed tax activity yet.
                                </option>
                                <option>Yes, but the client does not need for a Catch-Up Accounting or maybe on a later
                                    date but not now.</option>
                                <option>Yes, the client requested for a Catch-Up Accounting for some reasons to be
                                    declared below.</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Why the client need Catch-Up Accounting?</label>
                            <div class="form-text mb-1">Choose at least 1 reason why the client need Catch-Up
                                Accounting.</div>
                            <select class="form-select" name="RetainershipBIR.CatchUpReasons" id="catchUpReasonsSelect"
                                multiple size="6">
                                <option>NOT APPLICABLE / NOT NEEDED / NOT REQUESTED BY CLIENT</option>
                                <option>The accounting books a mess, outdated, and the client does not sure how to sort
                                    them out because of various reasons?</option>
                                <option>Fallen behind on their tax compliance with the Bureau of Internal Revenue (BIR)?
                                </option>
                                <option>Missed important tax deadlines?</option>
                                <option>The previous bookkeeper of the client has not provided the client any copy of
                                    his tax filing and returns?</option>
                                <option>Misplaced important records or have poor compliance and reporting controls in
                                    place?</option>
                                <option>Failure to file tax and/or wrong computation in tax filings?</option>
                                <option>Running a business without proper data?</option>
                                <option>Other legal and regulatory issues?</option>
                                <option>Other</option>
                            </select>
                            <div id="otherCatchUpReasonDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" name="RetainershipBIR.OtherCatchUpReason"
                                    id="otherCatchUpReasonInput" placeholder="Please specify other reason" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Target Date to Start Catch-Up Accounting Service</label>
                            <input type="date" class="form-control" name="RetainershipBIR.CatchUpStartDate" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Maintenance of BIR Compliance and Tax Activities</label>
                            <div class="form-text mb-1">Choose at least 1 activity requested by the client.</div>
                            <select class="form-select" name="RetainershipBIR.BIRComplianceActivities"
                                id="birComplianceActivitiesSelect" multiple size="6">
                                <option>BIR Compliance - Basic Tax Preparation only (Filing of monthly and quarterly tax
                                    activities in the COR with unlimited bookkeeping support online)</option>
                                <option>BIR Compliance - Advanced Tax Preparation (Basic Tax Preparation including QAP,
                                    SAWT, SLSP for VAT Relief and Form 2307)</option>
                                <option>BIR Compliance - Full Tax Preparation only (Advanced Tax Preparation including
                                    annual information reports and alphalisting, Form 2316, annual income tax, and
                                    preparation of financial statements)</option>
                                <option>Optional BIR Services - Compilation Services (Bookkeeping Compliance using Excel
                                    Version only)</option>
                                <option>Optional BIR Services - Updating of Books of Accounts (Virtual coaching only)
                                </option>
                                <option>Optional BIR Services - Updating of Books of Accounts (Site visit and
                                    journalizing)</option>
                                <option>Other</option>
                            </select>
                            <div id="otherBIRComplianceDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" name="RetainershipBIR.OtherBIRCompliance"
                                    id="otherBIRComplianceInput" placeholder="Please specify other activity" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Target Date to Start Subscription - BIR
                                Retainership</label>
                            <input type="date" class="form-control" name="RetainershipBIR.BIRRetainershipStartDate" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- Retainership - SPP Section -->
            <div class="col-12" id="retainerSPPSection" style="display:none;">
                <div class="card shadow-sm mb-3 border-info">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-file-earmark-text"></i> Retainership - SPP Details
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-12">
                            <div class="form-text mb-2">The client must already have an active company registration with
                                SSS, Philhealth (PHIC) or Pag-IBIG (HDMF).</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">SSS Company Registration No.</label>
                            <input type="text" class="form-control" name="RetainershipSPP.SSSCompanyRegNo"
                                placeholder="Enter SSS Company Registration No." />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date of SSS Registration</label>
                            <input type="date" class="form-control" name="RetainershipSPP.SSSRegistrationDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">PHIC Company Registration No.</label>
                            <input type="text" class="form-control" name="RetainershipSPP.PHICCompanyRegNo"
                                placeholder="Enter PHIC Company Registration No." />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date of PHIC Registration</label>
                            <input type="date" class="form-control" name="RetainershipSPP.PHICRegistrationDate" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">HDMF Company Registration No.</label>
                            <input type="text" class="form-control" name="RetainershipSPP.HDMFCompanyRegNo"
                                placeholder="Enter HDMF Company Registration No." />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Date of HDMF Registration</label>
                            <input type="date" class="form-control" name="RetainershipSPP.HDMFRegistrationDate" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Maintenance of SPP Compliance</label>
                            <div class="form-text mb-1">Choose at least 1 activity requested by the client.</div>
                            <select class="form-select" name="RetainershipSPP.SPPComplianceActivities"
                                id="sppComplianceActivitiesSelect" multiple size="4">
                                <option>SPP Compliance - Monthly generation of employee contribution list only (the
                                    client will be the one to pay the contributions)</option>
                                <option>SPP Compliance - Monthly generation of employee contribution list and payment of
                                    contributions</option>
                                <option>SPP Compliance - Self-employed contribution</option>
                                <option>Other</option>
                            </select>
                            <div id="otherSPPComplianceDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" name="RetainershipSPP.OtherSPPCompliance"
                                    id="otherSPPComplianceInput" placeholder="Please specify other activity" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Target Date to Start Subscription - SPP
                                Retainership</label>
                            <input type="date" class="form-control" name="RetainershipSPP.SPPRetainershipStartDate" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- One Time Transaction Section -->
            <div class="col-12" id="oneTimeTransactionSection" style="display:none;">
                <div class="card shadow-sm mb-3 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="bi bi-file-earmark-text"></i> One Time Transaction Details
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Type of Registrant</label>
                            <select class="form-select" name="OneTimeTransaction.TypeOfRegistrant"
                                id="oneTimeTypeOfRegistrantSelect">
                                <option value="">-- Select Type of Registrant --</option>
                                <option>Individual - Sole proprietorship</option>
                                <option>Individual - Professional</option>
                                <option>Partnership</option>
                                <option>Corporation</option>
                                <option>Cooperative</option>
                                <option>Association</option>
                                <option>Other non-profit organization</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Area of Services</label>
                            <select class="form-select" name="OneTimeTransaction.AreaOfServices"
                                id="oneTimeAreaOfServicesSelect">
                                <option value="">-- Select Area of Services --</option>
                                <option>DTI - Department of Trade and Industry</option>
                                <option>SEC - Securities and Exchange Commission</option>
                                <option>LGU - Local Government Unit</option>
                                <option>BIR - Bureau of Internal Revenue</option>
                                <option>SPP - SSS, Philhealth & Pag-ibig</option>
                                <option>CPA - Professional Services</option>
                                <option>Other</option>
                            </select>
                            <div id="oneTimeOtherAreaOfServicesDiv" class="mt-2" style="display:none;">
                                <input type="text" class="form-control" name="OneTimeTransaction.OtherAreaOfServices"
                                    id="oneTimeOtherAreaOfServicesInput"
                                    placeholder="Please specify other area of services" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- External Audit Section -->
            <div class="col-12" id="externalAuditSection" style="display:none;">
                <div class="card shadow-sm mb-3 border-secondary">
                    <div class="card-header bg-secondary text-white">
                        <i class="bi bi-file-earmark-text"></i> External Audit Details
                    </div>
                    <div class="card-body row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Status of External Audit Client</label>
                            <select class="form-select" name="ExternalAudit.ExternalAuditStatus"
                                id="externalAuditStatusSelect">
                                <option value="">-- Select Status --</option>
                                <option>New Client - First Time Audit</option>
                                <option>New Client - Subsequent Audit</option>
                                <option>Existing Client - Continuing Audit</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">External Audit - Purposes of Client</label>
                            <div class="form-text mb-1">Choose at least 1 activity requested by the client.</div>
                            <select class="form-select" name="ExternalAudit.ExternalAuditPurposes"
                                id="externalAuditPurposesSelect" multiple size="8">
                                <option>Issuance of Auditor's Report only</option>
                                <option>Audit of Financial Statements for Income Tax Return (ITR) filing with BIR and
                                    SEC</option>
                                <option>Audit of Financial Statements for PhilGEPS purposes</option>
                                <option>Audit of Financial Statements for PCAB purposes</option>
                                <option>Audit of Financial Statements for Bank Loan purposes</option>
                                <option>Audit of Financial Statements for VISA processing purposes</option>
                                <option>CPA Certification for Estate Tax purposes (Gross Estate of more than PHP 5
                                    million)</option>
                                <option>CPA Certification for Statement of Net Financial Contracting Capacity (NFCC)
                                </option>
