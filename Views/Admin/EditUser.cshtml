@model UserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <!-- Personal Details Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Personal Details</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="FullName"><span class="text-danger">*</span> Full Name</label>
                <input asp-for="FullName" class="form-control" required />
                <div class="invalid-feedback">Full Name is required.</div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age"><span class="text-danger">*</span> Age</label>
                        <input asp-for="Age" type="number" class="form-control" min="1" max="120" required />
                        <div class="invalid-feedback">Please enter a valid age between 1 and 120.</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BirthDate"><span class="text-danger">*</span> Birth Date</label>
                        <input asp-for="BirthDate" type="date" class="form-control"
                            max="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        <div class="invalid-feedback">Please enter a valid birth date.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Address Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Address</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="City">City</label>
                        <input asp-for="City" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="State">State</label>
                        <input asp-for="State" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ZipCode">Zip Code</label>
                        <input asp-for="ZipCode" class="form-control" pattern="\d{4}"
                            title="Enter a 4-digit zip code." />
                        <small class="form-text text-muted">Example: 6000</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Country">Country</label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Role Section -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Role</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Role"><span class="text-danger">*</span> Role</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles" required>
                    <option value="">-- Select Role --</option>
                </select>
                <div class="invalid-feedback">Please select a role.</div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- JavaScript for Form Validation -->
<script>
    // Enable Bootstrap form validation
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
