@model List<UserViewModel>

@{
    ViewData["Title"] = "Users List";
}

<div class="container users-container">
    <h2 class="text-center mb-4">Users List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-action="ConfirmDelete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="AddUser" class="btn btn-success">Add New User</a>
    </div>
</div>

<!-- Styles -->
<style>
    .users-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table th,
    .table td {
        vertical-align: middle;
        text-align: left;
        white-space: nowrap;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
        border-color: #b02a37;
    }

    .btn-success {
        background-color: #198754;
        border-color: #198754;
    }

    .btn-success:hover {
        background-color: #157347;
        border-color: #146c43;
    }

    h2 {
        font-weight: bold;
        color: #333;
    }
</style>