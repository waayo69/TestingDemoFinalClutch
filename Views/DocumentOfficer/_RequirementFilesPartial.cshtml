@model List<TestingDemo.Models.PermitRequirementModel>

@if (Model != null && Model.Any())
{
    <div class="accordion" id="requirementFilesAccordion">
        @foreach (var requirement in Model)
        {
            <div class="accordion-item border-0 mb-3">
                <h2 class="accordion-header" id="heading-@requirement.Id">
                    <button class="accordion-button collapsed bg-white border rounded-3 shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@requirement.Id" aria-expanded="false" aria-controls="collapse-@requirement.Id">
                        <div class="d-flex justify-content-between align-items-center w-100 me-3">
                            <span class="fw-bold"><i class="bi bi-file-text text-primary me-2"></i> @requirement.RequirementName</span>
                            <div>
                                @if (requirement.IsCompleted)
                                {
                                    <span class="badge bg-success me-2">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning me-2">Pending</span>
                                }
                                @if (requirement.Photos.Any())
                                {
                                    <span class="badge bg-info">@requirement.Photos.Count file(s)</span>
                                }
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="collapse-@requirement.Id" class="accordion-collapse collapse" aria-labelledby="heading-@requirement.Id" data-bs-parent="#requirementFilesAccordion">
                    <div class="accordion-body bg-white border rounded-3 mt-2 shadow-sm">
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <p class="mb-2"><strong>Description:</strong> @requirement.Description</p>
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <small class="text-muted">Date Uploaded:</small>
                                        <div class="fw-bold">@requirement.CreatedDate.ToString("g")</div>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <button type="button" class="btn btn-sm btn-outline-primary upload-files-btn" 
                                                data-requirement-id="@requirement.Id" 
                                                data-requirement-name="@requirement.RequirementName">
                                            <i class="bi bi-cloud-upload me-1"></i> Upload Optional Files
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @if (requirement.Photos.Any())
                        {
                            <hr class="my-3" />
                            <h6 class="mb-3"><i class="bi bi-paperclip text-primary me-2"></i> Uploaded Files:</h6>
                            <div class="row g-3">
                                @foreach (var photo in requirement.Photos)
                                {
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card border h-100">
                                            <div class="card-body p-3">
                                                <div class="d-flex align-items-center mb-3">
                                                    @{
                                                        var fileName = System.IO.Path.GetFileName(photo.PhotoPath);
                                                        var extension = System.IO.Path.GetExtension(fileName).ToLower();
                                                        var iconClass = extension switch
                                                        {
                                                            ".pdf" => "bi-file-earmark-pdf text-danger",
                                                            ".doc" or ".docx" => "bi-file-earmark-word text-primary",
                                                            ".xls" or ".xlsx" => "bi-file-earmark-excel text-success",
                                                            ".jpg" or ".jpeg" or ".png" or ".gif" => "bi-file-earmark-image text-info",
                                                            _ => "bi-file-earmark text-secondary"
                                                        };
                                                    }
                                                    <i class="bi @iconClass fs-2 me-3"></i>
                                                    <div class="flex-grow-1" style="min-width: 0;">
                                                        <div class="fw-bold text-truncate" title="@fileName" style="max-width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@fileName</div>
                                                        <small class="text-muted">@extension.ToUpper() File</small>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-1 flex-wrap">
                                                    <button type="button" class="btn btn-sm btn-outline-primary view-file-btn" 
                                                            data-photo-id="@photo.Id" 
                                                            data-file-name="@fileName"
                                                            data-file-url="@Url.Action("ViewRequirementFile", "DocumentOfficer", new { id = photo.Id })"
                                                            data-file-type="@extension">
                                                        <i class="bi bi-eye me-1"></i> View
                                                    </button>
                                                    <a href="@Url.Action("ViewRequirementFile", "DocumentOfficer", new { id = photo.Id })" 
                                                       class="btn btn-sm btn-outline-secondary" 
                                                       download="@fileName">
                                                        <i class="bi bi-download me-1"></i> Download
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger delete-file-btn" 
                                                            data-photo-id="@photo.Id" 
                                                            data-file-name="@fileName"
                                                            title="Delete File">
                                                        <i class="bi bi-trash me-1"></i> Delete
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info border-0 bg-info bg-opacity-10">
                                <i class="bi bi-info-circle text-info me-2"></i> No files have been uploaded for this requirement yet.
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-4">
        <div class="bg-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
            style="width: 60px; height: 60px;">
            <i class="bi bi-info-circle text-muted fs-3"></i>
        </div>
        <div class="text-muted fw-medium">No requirements have been created for this client yet.</div>
    </div>
}
